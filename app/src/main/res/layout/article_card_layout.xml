<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="articleModel"
            type="com.omada.junctionadmin.data.models.external.ArticleModel" />
        <variable
            name="viewModel"
            type="com.omada.junctionadmin.viewmodels.FeedContentViewModel" />
    </data>

    <com.google.android.material.card.MaterialCardView
        style="@style/CardView.Light"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                app:shapeAppearanceOverlay="@style/Widget.AppTheme.CircleShapeAppearance"
                android:id="@+id/publisher_profile_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:padding="4dp"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/article_poster_image"
                app:layout_constraintVertical_chainStyle="packed"
                remoteImageGs="@{articleModel.creatorProfilePicture}"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/article_title_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#DE000000"
                android:text="@{articleModel.title}"
                app:layout_constraintTop_toTopOf="@+id/publisher_profile_image"
                app:layout_constraintStart_toEndOf="@+id/publisher_profile_image"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/article_publisher_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#8A000000"
                android:text="@{articleModel.creatorName}"
                app:layout_constraintStart_toEndOf="@+id/publisher_profile_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/article_title_text"/>


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/article_poster_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                android:background="@color/backdrop"
                remoteImageGs="@{articleModel.image}"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toTopOf="@+id/more_details_button"
                app:layout_constraintDimensionRatio="H,3:4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/publisher_profile_image"
                app:layout_constraintVertical_chainStyle="packed"/>

            <ImageButton
                android:id="@+id/peek_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:padding="12dp"
                app:srcCompat="@drawable/ic_bookmark_black_24dp"
                app:layout_constraintTop_toTopOf="@+id/more_details_button"
                app:layout_constraintEnd_toStartOf="@+id/more_details_button"/>

            <ImageButton
                android:id="@+id/more_details_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="#00FFFFFF"
                android:padding="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/article_poster_image"
                app:srcCompat="@drawable/ic_right_24dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>